<!DOCTYPE html>
<html>
<head>
  <title>Seshoook</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
  <%= favicon_link_tag    'favicon.png' %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="social-buttons">
  <%= facebook_like("https://www.facebook.com/pages/Seshook/970989076260155", share: true) %>
</div>

<div class="container wrapper">
  <div class="row">
    <div class="col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

      <%= link_to root_path do %>
        <% image_tag('logo.png', class: 'img-responsive') %>
      <% end %>

      <h1 class="text-center home-message">
        <%= t('main_message') %>
      </h1>

      <% if flash[:notice] %>
        <div class="alert alert-info"><%= flash[:notice] %></div>
      <% elsif flash[:danger] %>
        <div class="alert alert-danger"><%= flash[:danger] %></div>
      <% end %>

      <%= yield %>
    </div>
  </div>
</div>

<!-- facebook sdk -->
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&appId=1022984314383391&version=v2.0";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));
</script>
