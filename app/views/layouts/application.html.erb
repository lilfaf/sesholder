<!DOCTYPE html>
<html>
<head>
  <title>Seshoook</title>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-md-6 col-lg-4 col-sm-offset-2 col-md-offset-3 col-lg-offset-4">

      <%= link_to root_path do %>
        <% image_tag('logo.png', class: 'img-responsive') %>
      <% end %>

      <h1 class="text-center home-message">
        <%= t('main_message') %>
      </h1>

      <% if flash[:notice] %>
        <div class="alert alert-info"><%= flash[:notice] %></div>
      <% elsif flash[:danger] %>
        <div class="alert alert-danger"><%= flash[:danger] %></div>
      <% end %>

      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>
